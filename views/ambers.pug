extends layout

block scripts
  script(src="/javascripts/amber.js")

block content
  h1 Amberscriptaufträge
  table#amber-table
    thead
      tr
        th Jobnummer
        th Projektname
        th Dateiname
        th Status
        th Aktionen
    tbody
      each job in jobs
        tr
          td= job.job_id
          td= job.projectname
          td= job.relative_filepath
          td 
            case job.status
              when "DONE"
                text Erledigt
              when "OPEN"
                text Ausstehend
              when "ERROR"
                text Fehlerhaft
          td
            button.action(onclick="openDeleteJobDialog('"+job.job_id+"')")
              i.fas.fa-trash
              span Löschen
block dialogs
    dialog#delete-amber-dialog
    div#delete-amber-message Sind Sie sicher, dass Sie diesen Auftrag und alle dazugehörigen Informationen löschen wollen?
    div.dialog-buttons
      button.action(onclick="deleteSelectedJob()")
        i.fas.fa-trash
        span Löschen
      button.action(onclick="closeDeleteJobDialog()")
        i.fas.fa-ban
        span Abbrechen