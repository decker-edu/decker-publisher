{
    "compilerOptions": {
        "module": "CommonJS",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "typeRoots": ["src/backend/types", "src/frontend/types"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "config.json",
        "src/**/*"
    ]
}